
<% flat = data.flats[owner] %>
<!-- Inject flat data in template -->
<div class="flat-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%="https://kitt.lewagon.com/placeholder/cities/#{flat.city_slug}"%>);">
</div>

<div class="flat-box">
  <div class="flat-avatar">
    <div class="flat-avatar-circle">
    <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle img-flat " %>
    </div>
    <div class="flat-name">
      <p><%= flat.name %></p>
      <h1><%= flat.description %></h1>
      <p><%= flat.city_name %></p>
    </div>
  </div>
  <div class="flat-tab">
    <form action="#" class="">
      <div class="flat-form-name form-inline">
      <input class="form-control form-research" type="text" placeholder="where">
      <input type="text" class="form-control form-research" placeholder="when">
      </div>
      <div class="flat-form-select">
      <select name="" id="" class="form-control form-research">
        <option value="">1 guest</option>
        <option value="">2 guest</option>
        <option value="">3 guest</option>
      </select>
      </div>
      <div class="flat-btn-large">
      <a class="btn btn-primary btn-lg flat-btn-large">Search</a>
      </div>
    </form>
  </div>
</div>
